localhost {
    # API routes
    handle_path /api/* {
        reverse_proxy api:9999
    }

    # Everything else: static + SPA fallback
    handle {
        @notAPI {
            not path /api/*
        }

        handle @notAPI {
            root * /www
            try_files {path} /
            file_server
        }
    }

    tls internal

    @http3 {
        protocol h3
    }
}
